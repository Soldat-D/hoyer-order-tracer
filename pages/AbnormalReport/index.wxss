/* pages/AbnormalReport/index.wxss */
.gallery{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin: 20rpx 20rpx;
    padding: 20rpx 20rpx;
    border:1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
}
.img-item{
    position: relative;
    margin: 5px;
}


.text-container{
    display: flex;
    flex-direction: column;
    /*align-items: center;*/
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
    margin: 20rpx 20rpx 30rpx 20rpx;
    background-color: white;
    /*border-bottom: 1rpx solid #e0e0e0;*/
}

.exce-content{
    padding: 20rpx 20rpx 20rpx 20rpx;
    width: 95%;
    height: 250rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.exception-type{
    padding: 20rpx 20rpx 20rpx 20rpx;
}

.btn-postion{
    display: flex;
    flex-direction: row-reverse;
}

.submit-btn{
    background-color: #ffc107;
}

.exce-type-radio-btns{
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
  
}

.exce-type-radio-btn{
  display: flex;
  background-color: #e0e0e0;
  color: white;
  border-radius: 5rpx;
  padding: 8rpx 15rpx;
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}


.exce-type-text{
  font-size: 25rpx;
  color: #e0e0e0;
}

.exce-type-details{
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  margin-right: 10rpx;
  justify-content: center;
  margin-bottom: 20rpx;
}

.exce-type-detail{
  font-size: 25rpx;
  background-color: #e0e0e0;
  /* border: 1rpx solid #e0e0e0; */
  border-radius: 30rpx;
  padding: 10rpx 15rpx;
  color: white;
  margin-left: 5rpx;
  margin-right: 5rpx;
}