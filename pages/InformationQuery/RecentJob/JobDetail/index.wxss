/* pages/InformationQuery/RecentJob/JobDetail/index.wxss */
.container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: whitesmoke;
}

.item-container{
  display: flex;
  flex-direction: column;
  margin: 16rpx;
  padding: 8rpx 0rpx 0rpx 0rpx;
  border-radius: 0rpx;
  background-color: #03a9f4;
  /* box-shadow: 0 0 5rpx #03a9f4; */
}

.item-title{
  font-size: 42rpx;
  margin-top: 8rpx;
  margin-right: 16rpx;
  margin-left: 16rpx;
  color: white;
}

.item-content-txt{
  margin-top: 8rpx;
  margin-right: 16rpx;
  margin-left: 16rpx;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  color: #e0e0e0;
}

.item-link{
  display: flex;
  flex-direction: row-reverse;
  margin: 8rpx 16rpx 8rpx 16rpx;
  font-size: 28rpx;
  color: #03a9f4;
  font-weight: bold;
}

.item-link2{
    background-color: white;
    padding: 4rpx 8rpx;
    border-radius: 4rpx;
}

.gallery{
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    padding: 16rpx 16rpx 16rpx 16rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
}
.img-item{
    position: relative;
    margin: 5px;
}
