/* pages/InformationQuery/TankContainerCA/index.wxss */

.cars-driver-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx;
}

.cars-driver-item-text{
  font-size: 40rpx;
  margin-bottom: 15rpx;
}
.cars-driver-item-input{
  width: 100%;
}

.checkbox-container{
    display: flex;
    width: 100%;
    justify-content: center;
    margin-top: 30rpx;
}

.checkbox{
    display: flex;
    flex-direction:column;
    font-size: 17pt;
}

.inputtext{
    text-align: center;
}

.error-container{
    display: flex;
    flex-direction: row-reverse;
    flex: 1;
    height: 25rpx;
}
.error-tips{
    font-size: 0.8rem;
    margin-right: 10rpx;
    color: rgba(255,0,0,1);
}

.cb-container{
    border:1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
    margin: 20rpx 20rpx;
    background-color: white;
}

view{
    display: block;
}

.cb-container .cb-item:last-child{
    border-bottom: 0;
}

.cb-container .cb-item{
    display:flex;
    align-items: center;
    padding: 25rpx;
    border-bottom: 1rpx solid #e0e0e0;
}
.cb-container .cb-item .checkbox{
    margin-right: 20rpx;
}

icon{
    display: inline-block;
    font-size: 0;
}

.cb-label{
    flex: 1;
    font-size: 30rpx;
    color: #444;
}

.search {
    display: flex;
    align-items: center;
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 0 5rpx #e0e0e0;
    margin-bottom: 30rpx;
    padding: 20rpx;
    background-color: white;
}

.search .search-icon {
    width: 41rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.search .input-wgt {
    flex: 1;
    font-size: 28rpx;
    color: black;
    border-radius: 10rpx;
}

.search .input-placeholder {
    flex: 1;
    font-size: 28rpx;
    color: #757575;
    border-radius: 10rpx;
}