/* pages/System/Settings/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    background-color: white;
    width: 100%;
    height: 100vh;
}

.alert-red{
    margin: 16rpx 16rpx;
    background-color: #e40012;
    padding: 16rpx 16rpx;
    color: white;
    font-size: 32rpx;
    /* box-shadow: 0 0 5rpx #e40012; */
}

.panel{
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
    margin-right: 16rpx;
    margin-top: 16rpx;
    padding: 16rpx 8rpx;
    box-shadow: 0 0 5rpx #ccc; 
    border-radius: 8rpx;
    font-size: 28rpx;
    background-color: white;
}

.title{
    color: #757575;
    font-size: 32rpx;
}

.tag-container{
    display: flex;
    flex-direction: row;
    flex-flow: wrap;
    margin-top: 8rpx;
}

.tag-border-green{
    font-size: 24rpx;
    color: green;
    border: solid 1rpx green;
    border-radius: 0rpx;
    padding: 2rpx 4rpx;
    margin-left: 8rpx;
    line-height: 26rpx;
    margin-top: 8rpx;
}